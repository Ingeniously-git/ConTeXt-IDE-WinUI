<UserControl
    x:Class="Monaco.CodeEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Monaco"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="Transparent" BorderThickness="0" BorderBrush="Transparent" DataContext="{Binding}" >
    <Grid>
    
        <WebView2 x:Name="View" Margin="-2,-2,0,0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                 Visibility="{Binding IsEditorLoaded}" 
                                 HorizontalAlignment="Stretch" FocusVisualMargin="0" FocusVisualPrimaryThickness="0" FocusVisualPrimaryBrush="Transparent" FocusVisualSecondaryBrush="Transparent"
 FocusVisualSecondaryThickness="0"    RequestedTheme="Dark"                         VerticalAlignment="Stretch"/>
</Grid>
</UserControl>
